<h1>Books</h1>

<% @books.each do |book| %>

<span><%= book.title %></span>
<span><%= book.body %></span>
<span><%= link_to 'Show', book_path(book.id) %></span>
<span><%= link_to "Edit", edit_book_path(book.id) %></span>

<% end %>

<h2>New Book</h2>

<%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create' %>
<% end %>